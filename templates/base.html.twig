<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Artistic Corner{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{asset('assets/css/loader.css')}}"/>
       <link rel="stylesheet" href="{{asset('assets/css/navbar.css')}}"/>
       <link rel="stylesheet" href="{{asset('assets/css/footer.css')}}"/>

    </head>
    <body>
    <div id="preloder">
		<div class="loader"></div>
	</div>
    <header>
         <div class="nav-bar">
      <ul>
        <li>
          <a href="{{path('app_home')}}">
            <img src="{{asset('assets/images/logo.svg')}}" alt="">
          </a>
        </li>
        <li>
          <a href=" {{path('app_art_work_index')}} ">Boutique</a>
        </li>
        <li>
          <a href=" {{path('app_artist_profile_index')}} ">Inspiration</a>
        </li>
      </ul>
      {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
      <ul class="sign">
        <li>
          <a href="{{path('app_register')}}">S'inscrire</a>
        </li>
        <li>
          <h5>Ou</h5>
        </li>
        <li>
          <a href="{{path('app_login')}}">S'identifier</a>
        </li>
      </ul>
      {% endif %}
      {% if  is_granted('IS_AUTHENTICATED_FULLY') %}
      <ul class="sign">
        <li>
          <a href="{{path('app_logout')}}">Se déconnecter</a>
        </li>
        
        <li>
           <a href=" {{path('app_profile')}} "> <img style="width: 60px;
                        height: 60px;
                        border-radius: 50%;
                        object-fit: cover;
                        margin-left:30px;"
                        src="/uploads/profiles/{{app.user.artist.profilePicture}} " alt="">

          </a>
        
        <li>
      </ul>
      {% endif %}
    </div>
    </header>

    {% block body %}{% endblock %}

    <footer>
        <div class="footer">
      <ul>
        <li>
          <h5>À propos artistic corner</h5>
        </li>
        <li>
          <p>Nous contacter</p>
        </li>
        <li>
          <p>Commande et paiement</p>
        </li>
      </ul>
      <ul>
        <li>
          <h5>Pour les acheteurs</h5>
        </li>
        <li>
          <p>Achats personnels</p>
        </li>
        <li>
