{% extends 'base.html.twig' %}



{% block body %}
<link rel="stylesheet" href="{{asset('assets/css/profile.css')}}"/>
<link rel="stylesheet" href="{{asset('assets/css/title.css')}}"/>
<div>    
    <ul class="info">
        <li><img class="photo" src="/uploads/profiles/{{artist.profilePicture}} " alt=""></li>
        <li><h5>{{ artist.username }}</h5><li>
        <li><h5>{{ artist.user }}</h5></li>

    </ul>
    <div class="title">
    <h2>About {{ artist.username }}</h2>
    </div>
    
    
    
    <div class="about">
        <ul class="links">
            <li><h5>Links</h5>
            <li><img src="{{asset('assets/images/Icons/facebook.svg')}}" alt=""><a href="{{artist.facebook}}}"target="_blank">Ajoute-moi sur Facebook</a></li>
            <li><img src="{{asset('assets/images/Icons/instagram.svg')}}" alt=""><a href="{{artist.instagram}}}"target="_blank">Suivez-moi sur Instagram</a></li>
            <li><img src="{{asset('assets/images/Icons/twitter.svg')}}" alt=""><a href="{{artist.twitter}}}"target="_blank">Suivez-moi sur Instagram</a></li>
        </ul>
        <ul class="bio">
            <li><h5>Biographie</h5><li>
            <li><p>{{ artist.Bio }}<p><li>
        </ul>
    </div>
</div>   

    
{% endblock %}
